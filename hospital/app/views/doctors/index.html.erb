<p id="notice"><%= notice %></p>

<h1>Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Nom doctor</th>
      <th>Ape doctor</th>
      <th>Cc doctor</th>
      <th>Celular</th>
      <th>Tipo doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.nom_doctor %></td>
        <td><%= doctor.ape_doctor %></td>
        <td><%= doctor.cc_doctor %></td>
        <td><%= doctor.celular %></td>
        <td><%= doctor.tipo_doctor %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

