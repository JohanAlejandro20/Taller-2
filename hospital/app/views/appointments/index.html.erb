<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Nombre Doctor</th>
      <th>Apellido Doctor</th>
      <th>Nombre paciente</th>
      <th>Apellido paciente </th>
      <th>Nombre consultorio</th>
      <th>Codigo consultorio</th>
      <th>Ubicacion del consultorio</th>
      <th>Fecha appointment</th>
      <th>Hora inicio</th>
      <th>Hora final</th>
      <th>Motivo cita</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= Doctor.find_by(id: appointment.doctor_id).nom_doctor%></td>
        <td><%= Doctor.find_by(id: appointment.doctor_id).ape_doctor%></td>
        <td><%= Patient.find_by(id: appointment.patient_id).nom_patient%></td>
        <td><%= Patient.find_by(id: appointment.patient_id).ape_patient%></td>
        <td><%= Office.find_by(id: appointment.office_id).nom_office%></td>
        <td><%= Office.find_by(id: appointment.office_id).cod_office%></td>
        <td><%= Office.find_by(id: appointment.office_id).ubica_office%></td>
        <td><%= appointment.fecha_appointment %></td>
        <td><%= appointment.hora_inicio %></td>
        <td><%= appointment.hora_final %></td>
        <td><%= appointment.motiva_cita %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
